generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Gender{
  MALE
  FEMALE
  OTHER
}
model User{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  gender Gender?
  phoneNumber String?
  dateBirth DateTime?
  preferences Boolean[] @default([true, false, false, true, false, false])
  totalOrders Int @default(0)
  totalRating Float @default(0)
  totalWishlist Int @default(0)
  //prisma tava reclamando pq esse campo da wl tem q ser opcional, mas so na hr de fazer o controller garantir q a wl
  //seja criada junta que ta show(eu acho)

  wishList WishList?
  // cart Cart?
}

model WishList{
  id Int @id @default(autoincrement())
  quantity Int @default(0)

  userId Int @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  //product WishListProduct[]
}

model Cart{
  subtotal  Float @default(0)
  savings   Float @default(0)
  shipping  Float @default(0)
  tax       Float @default(0)
  promoCode String?
  totalCost Float @default(0)

  userId Int @id
  // user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  // so retirar documentacao do user
  products cartProduct[]
}

model cartProduct{
  cartId Int
  cart Cart @relation(fields: [cartId], references: [userId], onDelete: Cascade)

  variantId Int
  // variant Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

@@id([cartId, variantId])
}



model Order{
  id          Int @id @default(autoincrement())
  time        DateTime @default(now())
  address     String
  rastreio    String
  situation   String
  totalPrice  Float

  userId Int
  // user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  products orderProduct[]
  
}

model orderProduct{

  orderId Int
  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  variantId Int
  // variant Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

@@id([orderId, variantId])
}